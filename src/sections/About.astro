---
import { profile } from "../data/data";
import { marked } from 'marked';
const paragraphOne = marked(profile.bio.split("||")[0]);
const paragraphTwo = marked(profile.bio.split("||")[1]);
console.log(paragraphOne)
---

<section id="about" class="relative bg-gradient-to-r from-gray-900 to-gray-800 py-8 px-4 md:px-12">
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-between relative">
      
      <!-- Texto de la izquierda -->
      <div class="text-white md:w-1/2 space-y-6">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 leading-tight text-transparent bg-clip-text bg-gradient-to-r from-artic-powder to-oceanic-noir text-s">
          About Me
        </h2>
        <p class="text-lg leading-relaxed" set:html={paragraphOne}> 
        </p>
        <p class="text-lg leading-relaxed" set:html={paragraphTwo}>
        </p>
        <a href="#contact" class="inline-block mt-6 py-3 px-8 bg-forsythis lg:bg-transparent btn-background text-white text-lg font-semibold hover:scale-105 transition-transform">Get in Touch</a>
      </div>
  
      <!-- Imagen de la derecha -->
      <div class="md:w-1/2 mt-10 md:mt-0">
        <img src="/hero-funko.png" width="50px"  height="50px" alt="Profile image" class="w-[100px] h-auto rounded-lg shadow-lg transform hover:scale-105 transition-transform">
      </div>
      
    </div>
  </section>
  
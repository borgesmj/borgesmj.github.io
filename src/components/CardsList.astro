---
const { listId } = Astro.props;
---

<ul
  id={listId}
  class="cardsList w-full flex flex-row p-6 gap-5 overflow-x-scroll scroll-snap-x lg:justify-around lg:items-center"
>
  <slot />
</ul>
<style>
    .cardsList::-webkit-scrollbar {
      display: none;
    }
    @media (width >= 1280px) {
      .cardsList {
        overflow-x: hidden;
      }
    }

    @media (width > 1500px){
      .cardsList{
        width: 1400px;
      }
    }
  </style>
---
import { Icon } from "astro-icon/components";
const { experience } = Astro.props;
import Card from "./Card.astro";
---

<li
  class="relative border-solid border-l-2 border-l-white px-6 py-4 flex flex-col gap-8 md:flex-row w-full"
>
  <span class="absolute top-[30px] left-[-7px] w-3 h-3 bg-deep-saffron rounded-full"
  ></span>
  <div class="w-full md:w-1/3">
    <h3 class="text-3xl font-[600] text-deep-saffron">{experience.position}</h3>
    <p class="text-lg">{experience.company}</p>
    <span class="text-[12px]">{experience.location}</span>
    <p class="text-[12px]">{experience.startDate} - {experience.endDate}</p>
  </div>
  <div class="flex flex-col gap-4 w-full md:w-2/3">
    <ul class="list-disc">
      {experience.responsibilities.map((item) => <li>{item}</li>)}
    </ul>
  </div>
</li>

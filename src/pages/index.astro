---
// Importar plantilla base
import BaseLayout from "../layouts/BaseLayout.astro";
import Tech_section from '../Components/Tech_section'
const pageTitle = "Pagina de Inicio";
// realizar fetch de github
const response = await fetch("https://api.github.com/users/borgesmj");
const data = await response.json();
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="flex flex-col justify-center w-full items-center py-4"
  >
    <img
      src="https://avatars.githubusercontent.com/u/121818423?v=4"
      alt="Github avatar"
      class="w-40 h-auto"
    />
    <h1 class="text-primary-100 font-bold text-[2rem] lg:text-[3rem]  text-center my-4">
      HI! I'm {data?.name.split(' ')[0]} ðŸ‘‹
    </h1>
    <p class="p-4 text-center">
      {data.bio}
    </p>
    <div class="w-full px-4 flex flex-row justify-between md:w-4/5 md:flex md:justify-between md:items-center">
      <a target="_blank" href={data?.followers_url} class='lg:hover:underline text-center'>{`${data.followers} followers`}</a>
      <a target="_blank" href={data?.following_url} class='lg:hover:underline text-center'>{`${data.following} following`}</a>
      <a target="_blank" href={data?.repos_url} class='lg:hover:underline text-center'>{`${data.public_repos} repos`}</a>
      <a target="_blank" href={data?.gists_url} class='lg:hover:underline text-center'>{`${data.public_gists} gists`}</a>
    </div>
    <Tech_section/>
  </div>
</BaseLayout>

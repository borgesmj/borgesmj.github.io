---
import BaseLayout from '../../layouts/BaseLayout.astro'
const allPosts = await Astro.glob('./posts/*.md')


const pageTitle = 'MB | Blog'
---

<BaseLayout pageTitle={pageTitle}>
	<h2 class='w-full text-center text-2xl border-b-2 border-b-solid border-d-white py-4'>Work experience</h2>
	<section class="p-4 flex flex-wrap w-full">
		<h3>Welcome to my blog</h3>
		<p>Where I will post my learning path in this marvelous world of tech</p>
		{
			allPosts.map((post) => (
				<a class="p-4 my-4 post-link
				
				" href={post.url}>
					<img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt}/>
					<span>{post.frontmatter.title}</span>
					</a>
			))
		}
	</section>
</BaseLayout>
